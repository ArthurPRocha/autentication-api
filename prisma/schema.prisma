generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @default(uuid())
  email           String  @unique
  name            String
  password        String
  oneTimePassword String?
  answer          String?
  roleId          Int 
  role            Role    @relation(fields: [roleId], references: [id])

  createdBy        String?
  createdAt        DateTime        @default(now())
  updatedBy        String?
  updatedAt        DateTime        @updatedAt
  status           Boolean         @default(true)
  Company          Company?        @relation(fields: [companyId], references: [id])
  companyId        String
  SecretQuestion   SecretQuestion? @relation(fields: [secretQuestionId], references: [id])
  secretQuestionId Int?

  @@map("tb_users")
}

model Company {
  id       String @id @default(uuid())
  name     String
  logoUrl  String
  fileName String

  createdBy String?
  createdAt DateTime @default(now())
  updatedBy String?
  updatedAt DateTime @updatedAt
  status    Boolean  @default(true)

  User  User[]
  Agent Agent[]

  @@map("tb_companies")
}

model Agent {
  id         String @id @default(uuid())
  name       String
  externalId String

  createdBy   String?
  createdAt   DateTime   @default(now())
  updatedBy   String?
  updatedAt   DateTime   @updatedAt
  status      Boolean    @default(true)
  AgentType   AgentType? @relation(fields: [agentTypeId], references: [id])
  agentTypeId Int
  Company     Company?   @relation(fields: [companyId], references: [id])
  companyId   String

  @@map("tb_agents")
}

model AgentType {
  id   Int    @id @default(autoincrement())
  name String

  status Boolean @default(true)

  Agent Agent[]

  @@map("tb_agent_types")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String

  status Boolean @default(true)

  User User[]

  @@map("tb_roles")
}

model SecretQuestion {
  id       Int    @id @default(autoincrement())
  question String

  status Boolean @default(true)

  User User[]

  @@map("tb_secret_questions")
}
